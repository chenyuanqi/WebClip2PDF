{
  "manifest_version": 3,
  "name": "WebClip2PDF",
  "description": "捕捉网页区域截图并生成 PDF 存档",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_title": "WebClip2PDF",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-script.js"],
      "css": ["styles/selection.css"],
      "run_at": "document_idle"
    }
  ]
}
